<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/ftp_camera_title"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/ftp_quick_start_setting_camera_select_title" />

    <LinearLayout
        android:id="@+id/ftp_select_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ftp_camera_title"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ftp_subcamera"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ftp_subcamera_normal"
            android:gravity="center"
            android:text="@string/ftp_quick_start_setting_camera_select_subcamera" />

        <TextView
            android:id="@+id/ftp_maincamera"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ftp_camera_select"
            android:gravity="center"
            android:text="@string/ftp_quick_start_setting_camera_select_camera" />
    </LinearLayout>

</RelativeLayout>